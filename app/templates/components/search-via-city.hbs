{{yield}}
<div class="container text-center">
    <form class="form-inline">
        <div class="form-group">
            <label for="cityQuery">City</label>
            {{input type="text" class="form-control" value=query.city id="cityQuery" placeholder="London"}}
        </div>
        <div class="form-group">
            <label for="countryQuery">Country</label>
            {{input type="text" class="form-control" value=query.country id="countryQuery" placeholder="GB"}}
        </div>
        <button type="button" {{action "findWeather"}} disabled={{if isValid false true}} class="btn {{if isValid 'btn-success' 'btn-disabled'}}">Search</button>
    </form>
    {{#unless isInitial}}
        {{#unless isValid}}
            <p class="text-danger" > 
                Please atleast enter City or Country name!!!
            </p>
        {{/unless}}
    {{/unless}}
</div>