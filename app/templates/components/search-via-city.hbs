{{yield}}
{{#if isLoading}}
    Loading...
{{else}}
<div class="container text-center">
    <form class="form-inline">
        <div class="form-group">
            <label for="cityQuery">City</label>
            {{input type="text" class="form-control" value=query.city id="cityQuery" placeholder="London"}}
        </div>
        <div class="form-group">
            <label for="countryQuery">Country</label>
            {{input type="text" class="form-control" value=query.country id="countryQuery" placeholder="GB"}}
        </div>
        <button type="button" {{action "findWeather"}} class="btn btn-default">Search</button>
    </form>
    {{#unless isValid}}
        <p class="text-danger" > 
            Please enter atleast City or Country name!!!
        </p>
    {{/unless}}
</div>
{{/if}}